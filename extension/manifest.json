{
    "manifest_version": 3,
    "name": "Screech",
    "description": "Screen recorder on steroids. Create and edit AI-powered product demos and videos in seconds. Share your recordings with your team and track the analytics.",
    "version": "1.0.0",
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
        "default_icon": "icons/icon48.png"
    },
    "background": {
        "service_worker": "build/background.js"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "build/*",
                "icons/*"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "content_security_policy": {
        "sandbox": "sandbox allow-scripts allow-modals allow-popups; script-src 'self' 'unsafe-inline' 'unsafe-eval' blob:; object-src 'self';worker-src 'self' blob: ;",
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; media-src 'self' data: blob: *;"
    },
    "permissions": [
        "tabs",
        "storage",
        "offscreen",
        "scripting",
        "activeTab",
        "tabCapture",
        "webNavigation",
        "unlimitedStorage"
    ],
    "externally_connectable": {
        "matches": [
            "https://*.screech.ai/*",
            "http://localhost:4200/*"
        ],
        "accept_tls_channel_id": true
    }
}